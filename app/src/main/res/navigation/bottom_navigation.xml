<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_navigation"
    app:startDestination="@id/movies"
    >
    <fragment
        android:id="@+id/movies"
        android:label="Movies"
        android:name="com.example.themoviedbclient.presentation.view.fragments.movie.MoviesFragment"
        tools:layout="@layout/base_fragment_list">
        <action
            android:id="@+id/action_movies_to_movieDetail"
            app:destination="@id/movieDetail"
            />
    </fragment>

    <fragment
        android:id="@+id/tvShows"
        android:label="Tv Shows"
        android:name="com.example.themoviedbclient.presentation.view.fragments.tvshow.TvShowsFragment"
        tools:layout="@layout/base_fragment_list">
        <action
            android:id="@+id/action_tvShows_to_tvShowDetail"
            app:destination="@id/tvShowDetail"
            />
    </fragment>

    <fragment
        android:id="@+id/movieDetail"
        android:label="Detail"
        android:name="com.example.themoviedbclient.presentation.view.fragments.detail.item.DetailItemFragment"
        tools:layout="@layout/item_detail_fragment_layout">
    </fragment>

    <fragment
        android:id="@+id/tvShowDetail"
        android:label="Detail"
        android:name="com.example.themoviedbclient.presentation.view.fragments.detail.item.DetailItemFragment"
        tools:layout="@layout/item_detail_fragment_layout">
    </fragment>
</navigation>