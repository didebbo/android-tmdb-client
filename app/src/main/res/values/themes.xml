<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheMovieDBClient" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorTertiary">@color/tertiaryColor</item>
        <item name="actionBarStyle">@style/Theme.TheMovieDBClient.ActionBarStyle</item>
        <item name="buttonStyle">@style/Theme.TheMovieDBClient.ButtonStyle</item>
        <item name="bottomNavigationStyle">@style/Theme.TheMovieDBClient.BottomNavigationStyle</item>
    </style>

    <style name="Theme.TheMovieDBClient.ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/primaryColor</item>
        <item name="titleTextStyle">@style/Theme.TheMovieDBClient.ActionBarTitleStyle</item>
    </style>

    <style name="Theme.TheMovieDBClient.ActionBarTitleStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/tertiaryColor</item>
    </style>

    <style name="Theme.TheMovieDBClient.ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/primaryColor</item>
        <item name="android:textColor">@color/secondaryColor</item>
    </style>

    <style name="Theme.TheMovieDBClient.BottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/primaryColor</item>
        <item name="itemTextColor">@color/secondaryColor</item>
        <item name="itemIconTint">@color/secondaryColor</item>
        <item name="elevation">48dp</item>
    </style>

</resources>